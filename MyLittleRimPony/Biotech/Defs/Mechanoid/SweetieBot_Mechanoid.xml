<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Sweetie Bot Mech -->  
    <ThingDef ParentName="BaseMechanoid">
		<defName>MLRP_SweetieBotMech</defName>
		<label>Sweetie Bot</label>
		<description>The pinnacle of Equestrian technology, this mechanoid version of Sweetie Bot is just as effective at neutralising enemies as her turret counterpart. She is a fast mover, with an on-board suppression system which allows her to extinguish fires, though she lacks the ability to jump and is vulnerable to melee attacks.</description>
		<statBases>
			<MoveSpeed>8</MoveSpeed>
			<BandwidthCost>5</BandwidthCost>
		</statBases>
		<race>
			<mechEnabledWorkTypes>
				<li>Firefighter</li>
			</mechEnabledWorkTypes>
			<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
		<lifeStageAges>
			<li>
				<def>MechanoidFullyFormed</def>
				<minAge>0</minAge>
				<soundWounded>Pawn_Mech_Militor_Wounded</soundWounded>
				<soundDeath>Pawn_Mech_Militor_Death</soundDeath>
				<soundCall>Pawn_Mech_Militor_Call</soundCall>
			</li>
			<li>
				<def>MechanoidFullyFormed</def>
				<minAge>100</minAge>
				<soundWounded>Pawn_Mech_Militor_Wounded</soundWounded>
				<soundDeath>Pawn_Mech_Militor_Death</soundDeath>
				<soundCall>Pawn_Mech_Militor_Call</soundCall>
			</li>
		</lifeStageAges>
		<thinkTreeConstant>MLRP_SweetieBotMechThinkTree</thinkTreeConstant>
		</race>
		<butcherProducts>
			<Steel>30</Steel>
			<Plasteel>10</Plasteel>
		</butcherProducts>
	</ThingDef>
    
    <PawnKindDef ParentName="BaseMechanoidKind">
      <defName>MLRP_SweetieBotMech</defName>
      <label>Sweetie Bot</label>
      <race>MLRP_SweetieBotMech</race>
      <lifeStages>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/Mechanoid/SweetieBot</texPath>
            <maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/SweetieBot</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>1</drawSize>
          </bodyGraphicData>
        </li>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/Mechanoid/SweetieBot</texPath>
            <maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/SweetieBot</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>1</drawSize>
          </bodyGraphicData>
        </li>
      </lifeStages>   
		<weaponMoney>9999~9999</weaponMoney>	  
      <weaponTags>
        <li>RainbowLaser_Mech</li>
      </weaponTags>
		<combatPower>150</combatPower>
    </PawnKindDef>
	
  <RecipeDef ParentName="MediumMechanoidRecipe">
    <defName>MLRP_GestateSweetieBot</defName>
    <label>gestate Sweetie Bot</label>
    <description>Gestate a Sweetie Bot mechanoid.</description>
    <researchPrerequisite>HighMechtech</researchPrerequisite>
    <ingredients Inherit="False">
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>200</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>75</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SubcoreHigh</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <MLRP_SweetieBotMech>1</MLRP_SweetieBotMech>
    </products>
    <descriptionHyperlinks>
      <ThingDef>MLRP_SweetieBotMech</ThingDef>
    </descriptionHyperlinks>
  </RecipeDef>
  
	<ThinkTreeDef>
		<defName>MLRP_SweetieBotMechThinkTree</defName>
		<thinkRoot Class="ThinkNode_Priority">
			<subNodes>

				<li Class="ThinkNode_Subtree">
					<treeDef>Despawned</treeDef>
				</li>
				
